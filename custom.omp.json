{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#cc241d",
          "foreground": "#fbf1c7",
          "style": "plain",
          "template": " {{ .UserName }} ",
          "type": "session"
        },
        {
          "background": "#98971a",
          "foreground": "#fbf1c7",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#d79921",
          "foreground": "#fbf1c7",
          "powerline_symbol": "",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " \uf09b ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}) ",
          "type": "git"
        },
        {
          "background": "#458588",
          "foreground": "#fbf1c7",
          //"powerline_symbol": "\ue0b0",
          "style": "plain",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "#b16286",
          "foreground": "#fbf1c7",
          "properties": {
            "time_format": "15:04"
          },
          "style": "plain",
          "template": " \uf608 {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "",
          "type": "time"
        }
      ],
      "type": "prompt",
      "newline": true
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#cd5e42",
          "style": "plain",
          "template": "\ue3bf ",
          "type": "root"
        },
        {
          "foreground": "#b16286",
          "style": "plain",
          "template": "#",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
