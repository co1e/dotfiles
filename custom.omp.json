{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#fb4934",
          // "foreground": "#fbf1c7",
          "style": "plain",
          "template": " \uf505 {{ .UserName }}@{{ .HostName }} ",
         // "template": " \{{ .HostName }} ",
          "type": "session"
        },
        {
          "foreground": "#98971a",
          // "foreground": "#fbf1c7",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": " \uf752 {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#d79921",
          //"foreground": "#fbf1c7",
          "powerline_symbol": "",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " \uf09b ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}) ",
          "type": "git"
        },
        {
          "foreground": "#458588",
          // "foreground": "#fbf1c7",
          //"powerline_symbol": "\ue0b0",
          "style": "plain",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "foreground": "#458588",
          //"foreground": "#fbf1c7",
          "style": "plain",
          "template": " \ue627 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "type": "go" 
        },
        {
          "foreground": "#458588",
          //"foreground": "#fbf1c7",
          "style": "plain",
          "template": " \uf820 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "type": "python" 
        }
        ],
      "type": "prompt",
      "newline": false 
    },
    {
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "foreground": "#fbf1c7",
          "properties": {
            "time_format": "2006-01-02 @ 3:04 PM"
          },
          "style": "plain",
          "template": " \uf5ef {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "",
          "type": "time"
        }
     ],
      "type": "prompt"
    },
    {
        "alignment": "left",
        "newline": true,
        "segments": [
         {
          "foreground": "#cd5e42",
          "style": "plain",
          "template": " \ue3bf ",
          "type": "root"
        },
        {
          "foreground": "#fe8019",
          "style": "plain",
          "template": " \uf554 ",
          "type": "text"
        }
        ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
